---
import SiteHeader from "@/components/display/SiteHeader.astro";
import { SITE_TITLE } from "@/consts";
import NavList from '@/components/nav/NavList.astro';

const navs = [
  { url: '/', title: 'Home' },
  { url: '/posts', title: 'Posts' },
  { url: '/about', title: 'About' },
]

---

<header>
  <SiteHeader title={SITE_TITLE} />
  <NavList navs={navs} />
</header>
<style>
  header {
    margin-block-end: 2em;
  }
  h1 {
    margin-block: 0.5em;
  }
</style>
