---
export interface Props {
  title: Date;
}

const { title } = Astro.props;
---
<h1 class="site-header">
  { title }
</h1>

<style>
  .site-header {
    --color: #3E3355;
    --shadow-color: #8AE6FB;

    color: var(--color);
    text-shadow: var(--shadow-color) 4px 2px 0;
  }

  .dark .site-header {
    --color: #FFFFFF;
    --shadow-color: #3B82F6;
  }
</style>
